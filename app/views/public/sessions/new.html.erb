<div class="card-container">
  <div class="row no-gutters">
   <div class="card  col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
    <h5 class="text-dark bg-light py-4 mb-0">ログイン</h5>
     <div class="form-body p-4">
       <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-group mb-3 mx-auto d-flex justify-content-center">
       <div class="input-group-prepend">
        <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
       </div>
        <%= f.text_field :name, autofocus: true %>
      </div>
       <div class="input-group mb-3 mx-auto d-flex justify-content-center">
        <div class="input-group-prepend">
         <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
        </div>
          <%= f.password_field :password %>
       </div>

  <!--% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    %= f.check_box :remember_me %>-->
  <!--    %= f.label :remember_me %>-->
  <!--  </div>-->
  <!--% end %>-->
    <%= f.submit "ログイン", class: "btn btn-lg btn-block btn-info mt-5" %>

<% end %>
     </div>
       <%= render "public/shared/links" %>
     </div>
    </div>
  </div>
