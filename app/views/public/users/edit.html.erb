<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">プロフィール編集</h5>
          <div class="form-body p-4">
              
<%= form_with model: @user do |f| %>

  <label for="inputImage">・プロフィール画像</label>
  <%= f.file_field :profile_image, accept: "image/*", class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
                            <span class="input-group-text" aria-hidden="true">名前</span>
            </div>
  <!--<label for="inputName">名前</label>-->
  <%= f.text_field :name,class: "form-control", autofocus: true, id:"inputName", placeholder:"名前"%>
          </div>
          <%= f.text_area :caption, class: "form-control", rows: "3", placeholder: "紹介文" %>
        <hr>
  <%= f.submit "変更を保存" , class: "btn btn-lg btn-block btn-info mt-4"%>
  <%= link_to "退会する",unsubscribe_users_path(@user), class:"btn btn-danger my-3" %>
<% end %>
     </div>
    </div>
  </div>
</div>