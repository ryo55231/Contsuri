<div class="card-list-container py-5">
    <div class="row">
        <div class="col-lg-4 mb-3">
          <%= link_to '新しい順', post_images_path(latest: "true") %>
       |<%= link_to '古い順', post_images_path(old: "true") %>
       |<%= link_to 'いいねの多い順', post_images_path(favorite_count: "true") %>
        </div>
        
    <div class="row">
      <div class="col-lg-8">      
<% @post_images.each do |post_image| %>

  <div class="card mx-auto mt-4 shadow-lg "style="width: 18rem; margin:2rem;">
    <%= image_tag post_image.get_image, class: "card-img-top", width: 300, height: 200 %>
     <div class="card-body md-3">

    <%= image_tag post_image.user.get_profile_image(50,50) %>
    </div>
    <div class="col">
    <p class="card-title"><%= post_image.title %></p>
    <!--<p class="card-text">説明：%= post_image.body %></p>-->
    <p class="card-user">ユーザーネーム：<%= post_image.user.name %></p>
    <% if user_signed_in? %>
    <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
    <% end %>
    </div>
  </div>
  </div>
  </div>
<% end %>
</div>
</div>