       <%= link_to '新しい順', post_images_path(latest: "true") %>
       |<%= link_to '古い順', post_images_path(old: "true") %>
       |<%= link_to 'いいねの多い順', post_images_path(favorite_count: "true") %>
<% @post_images.each do |post_image| %>
  <div>
    <%= image_tag post_image.get_image %>
    <p>投稿ユーザー画像：<%= image_tag post_image.user.get_profile_image(100,100) %></p>
    <p>タイトル：<%= post_image.title %></p>
    <p>説明：<%= post_image.body %></p>
    <p>ユーザーネーム：<%= post_image.user.name %></p>
    <% if user_signed_in? %>
    <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
    <% end %>
  </div>
<% end %>